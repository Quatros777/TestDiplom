<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".activities.RegistrationActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/ButtonBack"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/registration_button_back"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="18sp"
        app:srcCompat="@drawable/buttonback" />

    <TextView
        android:id="@+id/registration_main_title"
        android:layout_width="254sp"
        android:layout_height="32dp"
        android:layout_marginLeft="68sp"
        android:layout_marginTop="14sp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Регистрация"
        android:textColor="#0C0934"
        android:textSize="24sp" />

    <!--    //Обработка электронной почты  и ее ввод - начало-->
    <TextView
        android:id="@+id/registration_email_title"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:text="Email"
        android:layout_marginTop="80sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/registration_email_teditable_ext"
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="102sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Введите email"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка электронной почты и ее ввод конец-->

    <!--    //Обработка телефона и его ввод - начало-->
    <TextView
        android:id="@+id/registration_phonenumber_title"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:text="Номер телефона"
        android:layout_marginTop="158sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="176sp"
        android:background="@drawable/edittextstyle"
        android:digits="+0123456789"
        android:fontFamily="@font/inter"
        android:hint="+7"
        android:inputType="phone"
        android:maxLength="12"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка телефона и его ввод конец-->

    <!--    //Обработка даты рождения и ее ввод - начало-->
    <TextView
        android:id="@+id/registration_birthday_title"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:text="Дата рождения"
        android:layout_marginTop="232sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/registration_birthday_editable_text"
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="256sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="__.__.____"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка даты рождения и ее ввод конец-->


    <!--    //Обработка пароля  и ее ввод - начало-->
    <TextView
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="312sp"
        android:layout_marginRight="40sp"
        android:fontFamily="@font/inter_medium"
        android:gravity="top"
        android:text="Пароль"
        android:textColor="@color/Grey"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/registration_password_editable_text"
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="334sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Придумайте пароль"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка пароля и ее ввод конец-->

    <!--    //Обработка подтверждения пароля  и ее ввод - начало-->
    <TextView
        android:id="@+id/registration_confirm_password_title"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:text="Подтверждение пароля"
        android:layout_marginTop="390sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/registration_confirm_password_editable_text"
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="412sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Повторите пароль"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка подтверждения пароля и ее ввод конец-->

    <TextView
        android:id="@+id/registration_service_privacy_policy_text"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="588sp"
        android:layout_marginRight="40sp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Нажимая «Создать аккаунт», я соглашаюсь с правилами использования сервиса и принимаю политику конфиденциальности"
        android:textColor="@color/Grey"
        android:textSize="13sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpButton"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="648sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/inset"
        android:fontFamily="@font/inter_medium"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Создать аккуант"/>

</RelativeLayout>