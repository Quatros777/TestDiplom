    tools:context=".profile">

    <TextView
        android:layout_width="236sp"
        android:layout_height="32dp"
        android:text="Профиль"
        android:fontFamily="@font/inter_medium"
        android:textSize="24sp"
        android:layout_marginTop="14sp"
        android:layout_marginLeft="77sp"
        android:textColor="#0C0934"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/moreinfo"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginLeft="330sp"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginLeft="338sp"
        android:layout_marginTop="18sp"
        app:srcCompat="@drawable/morecircle" />

    <ImageView
        android:layout_width="128sp"
        android:layout_height="128dp"
        android:layout_marginLeft="131sp"
        android:layout_marginTop="92sp"
