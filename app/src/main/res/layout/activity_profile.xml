    <TextView
        android:layout_width="138sp"
        android:layout_height="60sp"
        android:text="Мои объявления"
        android:fontFamily="@font/inter_medium"
        android:textSize="24sp"
        android:layout_marginTop="418sp"
        android:layout_marginLeft="36sp"
        android:textColor="#0C0934"
        android:gravity="left"
        />
    <!--        Мои объявления - конец-->


</RelativeLayout>