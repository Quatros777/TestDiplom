    <TextView
        android:layout_width="236sp"
        android:layout_height="32dp"
        android:text="Илья Курдюков"
        android:fontFamily="@font/inter_medium"
        android:textSize="24sp"
        android:layout_marginTop="232sp"
        android:layout_marginLeft="77sp"
        android:textColor="#0C0934"
        android:gravity="center"
        />


    <TextView
        android:layout_width="155sp"
        android:layout_height="18dp"
        android:layout_marginLeft="118sp"
        android:layout_marginTop="268sp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="+7 920 503 45-54"
        android:textColor="#667085"
        android:textSize="16sp" />

    <TextView
        android:layout_width="155sp"
        android:layout_height="20dp"
        android:layout_marginLeft="118sp"
        android:layout_marginTop="290sp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="21 год"
        android:textColor="#667085"
        android:textSize="16sp" />

    <!--        Мои объявления - начало-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mypost"
        android:layout_width="163sp"
        android:layout_height="160sp"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="332sp"
        android:background="@drawable/profilebutton"
        style="?android:attr/borderlessButtonStyle"
       />

    <ImageView
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:layout_marginLeft="36sp"
        android:layout_marginTop="346sp"
