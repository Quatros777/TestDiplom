<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48sp"
        android:layout_marginTop="460dp"
        android:layout_marginRight="48sp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center_horizontal"
        android:text="@string/MainScreen"
        android:textAlignment="center"
        android:textColor="@color/PureDark"
        android:textSize="32sp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonCreateAcc"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="580sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/inset"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="4dp"
        android:fontFamily="@font/inter_medium"
        android:lineSpacingExtra="4sp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="20sp"
        style="?android:attr/borderlessButtonStyle"
        android:text="Регистрация"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonVoiti"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginTop="648sp"
        android:fontFamily="@font/inter_medium"
        android:textAllCaps="false"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:textColor="@color/Blue"
        android:textSize="20sp"
        android:text="Войти"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="412sp"
        android:layout_marginTop="50sp"
        app:srcCompat="@drawable/mainimage" />


</RelativeLayout>
