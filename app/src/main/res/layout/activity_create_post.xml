<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".create_post">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@id/ButtonBack"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="10sp"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="24sp"
            android:layout_marginLeft="-32sp"
            android:layout_height="24sp"
            android:layout_marginTop="18sp"
            app:srcCompat="@drawable/buttonback" />
        <TextView
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:text="Создание объявления"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="#0C0934"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="40dp">

    <TextView
        android:id="@+id/addrs"
        android:layout_width="310dp"
        android:layout_height="17dp"
        android:text="Адрес"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:layout_marginTop="16sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/adrsEdit"
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Введите адрес Вашего объекта"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/descrip"
            android:layout_width="310dp"
            android:layout_height="17dp"
            android:text="Описание"
            android:fontFamily="@font/inter_medium"
            android:textSize="14sp"
            android:layout_marginTop="16sp"
            android:textColor="@color/Grey"
            android:gravity="top"
            />

        <EditText
            android:id="@+id/descripEdit"
            android:layout_width="310sp"
            android:layout_height="187dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittextstyle"
            android:fontFamily="@font/inter"
            android:hint="Введите описание"
            android:padding="10sp"
            android:gravity="top"
            android:textColorHint="#667085"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="310dp"
            android:layout_height="17dp"
            android:text="Тариф"
            android:fontFamily="@font/inter_medium"
            android:textSize="14sp"
            android:layout_marginTop="16sp"
            android:textColor="@color/Grey"
            android:gravity="top"
            />

        <EditText
            android:id="@+id/rateEdit"
            android:layout_width="310sp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittextstyle"
            android:fontFamily="@font/inter"
            android:hint="Введите сумму (₽/сут)"
            android:padding="10sp"
            android:gravity="top"
            android:textColorHint="#667085"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createPost"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/inset"
            android:fontFamily="@font/inter_medium"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Создать объявление"/>

    </LinearLayout>
</LinearLayout>
