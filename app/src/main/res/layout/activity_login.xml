<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/login_email_title"
        android:layout_width="310dp"
        android:layout_height="17dp"
        android:text="Email"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:layout_marginTop="420sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/login_email_editable_text"
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="442sp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Введите email"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/login_password_title"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="504sp"
        android:layout_marginRight="40sp"
        android:fontFamily="@font/inter_medium"
        android:gravity="top"
        android:text="Пароль"
        android:textColor="@color/Grey"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/login_password_editable_text"
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="528sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Введите пароль"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpButton"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="596sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/inset"
        android:fontFamily="@font/inter_medium"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Войти"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonRecover"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginLeft="206sp"
        android:layout_marginTop="672sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/inter_medium"
        android:paddingHorizontal="4dp"
        android:text="Восстановить"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/Blue"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonBack"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="18sp"
        app:srcCompat="@drawable/buttonback" />

    <TextView
        android:layout_width="114sp"
        android:layout_height="20dp"
        android:layout_marginLeft="88sp"
        android:layout_marginTop="672sp"
        android:fontFamily="@font/inter_medium"
        android:gravity="top"
        android:text="Забыли пароль?"
        android:textColor="#6C6B72"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/login_main_title"
        android:layout_width="254sp"
        android:layout_height="32dp"
        android:layout_marginLeft="68sp"
        android:layout_marginTop="14sp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Авторизация"
        android:textColor="#0C0934"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="362sp"
        android:layout_marginTop="48sp"
        app:srcCompat="@drawable/autscreen" />

</RelativeLayout>