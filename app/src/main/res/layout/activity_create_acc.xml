<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_create_acc">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/ButtonBack"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="18sp"
        app:srcCompat="@drawable/buttonback" />

    <TextView
        android:layout_width="254sp"
        android:layout_height="32dp"
        android:text="Регистрация"
        android:fontFamily="@font/inter_medium"
        android:textSize="24sp"
        android:layout_marginTop="14sp"
        android:layout_marginLeft="68sp"
        android:textColor="#0C0934"
        android:gravity="center"
        />

<!--    //Обработка логина и его ввод - начало-->

    <TextView
        android:id="@id/title"
        android:layout_width="310dp"
        android:layout_height="17dp"
        android:text="Логин пользователя"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:layout_marginTop="80sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="102sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Введите логин"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
<!--    //Обработка логина и его ввод конец-->

    <!--    //Обработка телефона и его ввод - начало-->
    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:text="Номер телефона"
        android:layout_marginTop="158sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="176sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="+7"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка телефона и его ввод конец-->

    <!--    //Обработка даты рождения и ее ввод - начало-->
    <TextView
        android:id="@+id/birthday"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:text="Дата рождения"
        android:layout_marginTop="232sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="256sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="__.__.____"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка даты рождения и ее ввод конец-->

    <!--    //Обработка электронной почты  и ее ввод - начало-->
    <TextView
        android:id="@+id/email"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:text="Email"
        android:layout_marginTop="312sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="336sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Введите email"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка электронной почты и ее ввод конец-->

    <!--    //Обработка пароля  и ее ввод - начало-->
    <TextView
        android:id="@+id/pswrd"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:text="Пароль"
        android:layout_marginTop="392sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="416sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Придумайте пароль"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка пароля и ее ввод конец-->

    <!--    //Обработка подтверждения пароля  и ее ввод - начало-->
    <TextView
        android:id="@+id/confirmpswrd"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:text="Подтверждение пароля"
        android:layout_marginTop="472sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="top"
        />

    <EditText
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="496sp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="@font/inter"
        android:hint="Повторите пароль"
        android:padding="10sp"
        android:textColorHint="#667085"
        android:textSize="16sp" />
    <!--    //Обработка подтверждения пароля и ее ввод конец-->

    <TextView
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="13sp"
        android:text="Нажимая «Создать аккаунт», я соглашаюсь с правилами использования сервиса и принимаю политику конфиденциальности"
        android:layout_marginTop="588sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:textColor="@color/Grey"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonVoitiFromAut"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="658sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/inset"
        android:fontFamily="@font/inter_medium"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Создать аккуант"/>

</RelativeLayout>